
scalar Time
scalar JSON

type Event {
  _id: String!
  short_id: String!
  name: String
  description: String
  payload: JSON
  created_at: Time
  updated_at: Time
}

input CreateEventInput {
  name: String!
  description: String!
}

type Query {
  getEvents: [Event]
  getEventById(id: ID!): Event
}

type Mutation {
  createEvent(input: CreateEventInput!): Event!
}
